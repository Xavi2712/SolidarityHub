<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el chip está seleccionado (azul eléctrico) -->
    <item android:state_checked="true" android:color="@color/blue_electric" />

    <!-- Estado cuando el chip no está seleccionado (blanco) -->
    <item android:state_checked="false" android:color="@color/white" />

    <!-- Color por defecto (opcional) -->
    <item android:color="@color/white" />
</selector>