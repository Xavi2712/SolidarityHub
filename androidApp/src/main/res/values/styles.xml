<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Personaliza los colores y atributos aquí -->
        <item name="colorPrimary">@color/your_primary_color</item>
        <item name="colorPrimaryVariant">@color/your_primary_variant</item>
        <item name="colorOnPrimary">@color/your_on_primary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="BlueChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/blue_electric</item>
        <item name="chipBackgroundColor">@animator/chip_selector</item>
        <item name="android:textColor">@color/blue_text_primary</item>
    </style>
    <style name="BlueTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_primary</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>
    <style name="BlueOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue_primary_dark</item>
        <item name="strokeColor">@color/blue_primary_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <!-- Archivo: values/styles.xml -->
    <style name="BlueAccentCalendar" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorAccent">#2196F3</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#2196F3</item>
        <item name="android:textColorPrimary">#1565C0</item>
        <item name="colorSurface">@android:color/white</item>
    </style>
    <style name="botonMenu" parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Fondo y bordes -->
        <item name="android:background">@drawable/menu_boton_selector</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">0dp</item>

        <!-- Tamaño y espaciado -->
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">48dp</item> <!-- Altura estándar para menús -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

        <!-- Texto -->
        <item name="android:textColor">@color/quantum_black_100</item>
        <item name="android:textSize">14sp</item> <!-- Tamaño ligeramente más pequeño -->
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item> <!-- Alineación -->

        <!-- Iconos -->
        <item name="iconGravity">start</item>
        <item name="iconSize">20dp</item> <!-- Iconos un poco más pequeños -->
        <item name="iconPadding">12dp</item>
        <item name="iconTint">@color/quantum_black_100</item>

        <!-- Efectos -->
        <item name="rippleColor">@color/ripple_light_gray</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
