<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Título de la sección de capacidades -->
        <TextView
            android:id="@+id/tvTituloCapacidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona tus capacidades:"
            android:textColor="#1565C0"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Primera fila de tarjetas - Más pequeñas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLimpieza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:checkable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconMargin="8dp"
            app:checkedIconTint="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/cardMaterialPesado"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloCapacidades"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Limpieza"
                    android:src="@android:drawable/ic_menu_manage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Limpieza"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMaterialPesado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:checkable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconMargin="8dp"
            app:checkedIconTint="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/cardSuministros"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardLimpieza"
            app:layout_constraintTop_toTopOf="@+id/cardLimpieza"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Material Pesado"
                    android:src="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Material"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSuministros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checkable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconMargin="8dp"
            app:checkedIconTint="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardMaterialPesado"
            app:layout_constraintTop_toTopOf="@+id/cardMaterialPesado"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Suministros"
                    android:src="@android:drawable/ic_menu_send" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Suministros"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Segunda fila de tarjetas - Más pequeñas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSanidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:checkable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconMargin="8dp"
            app:checkedIconTint="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/cardHospedaje"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardLimpieza"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Sanidad"
                    android:src="@android:drawable/ic_menu_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Sanidad"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHospedaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:checkable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconMargin="8dp"
            app:checkedIconTint="#2196F3"
            app:layout_constraintEnd_toStartOf="@+id/cardTransporte"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardSanidad"
            app:layout_constraintTop_toTopOf="@+id/cardSanidad"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Hospedaje"
                    android:src="@android:drawable/ic_menu_myplaces" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Hospedaje"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTransporte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:checkable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconMargin="8dp"
            app:checkedIconTint="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardHospedaje"
            app:layout_constraintTop_toTopOf="@+id/cardHospedaje"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="Transporte"
                    android:src="@android:drawable/ic_menu_directions" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Transporte"
                    android:textSize="10sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección de disponibilidad -->

        <!-- CalendarView en lugar de DatePicker -->

        <!-- Sección de provincias -->
        <TextView
            android:id="@+id/tvDisponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Indica tu disponibilidad:"
            android:textColor="#1565C0"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSanidad" />


        <!-- Añade este TextView después del calendario -->
        <TextView
            android:id="@+id/tvFechasSeleccionadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#1565C0"
            android:text="Fechas seleccionadas: Ninguna"
            app:layout_constraintTop_toBottomOf="@+id/tvDisponibilidad"
            app:layout_constraintStart_toStartOf="parent" />



        <TextView
            android:id="@+id/tvProvincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Selecciona tu provincia:"
            android:textColor="#1565C0"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFechasSeleccionadas" />

        <!-- Input de provincias con Material Design y dropdown hacia arriba -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProvincias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Provincia"
            app:boxStrokeColor="#2196F3"
            app:hintTextColor="#1565C0"
            app:endIconTint="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProvincia">

            <AutoCompleteTextView
                android:id="@+id/actvProvincias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:dropDownAnchor="@id/tilProvincias"
                android:dropDownHeight="180dp"
                android:dropDownVerticalOffset="-180dp"
                android:textColor="#1565C0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón de registro -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrarVoluntario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:padding="12dp"
            android:text="Registrar como Voluntario"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilProvincias"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>