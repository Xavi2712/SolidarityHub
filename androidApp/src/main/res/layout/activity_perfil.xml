<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".perfil.PerfilActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_primary"
            app:title="Mi Perfil"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta de perfil principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con avatar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="24dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_profile"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:background="@color/design_default_color_primary"
                            android:padding="16dp"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="ðŸ‘¤ InformaciÃ³n Personal"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/design_default_color_primary" />

                    </LinearLayout>

                    <!-- Datos del perfil -->
                    
                    <!-- DNI (No editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ†” DNI/NIE:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvDniValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            tools:text="12345678A" />

                    </LinearLayout>

                    <!-- Nombre (Editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¤ Nombre:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/etNombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            tools:text="Juan PÃ©rez" />

                    </LinearLayout>

                    <!-- Correo (Editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“§ Correo:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/etCorreo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            android:inputType="textEmailAddress"
                            tools:text="juan@email.com" />

                    </LinearLayout>

                    <!-- TelÃ©fono (Editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“± TelÃ©fono:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/etTelefono"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            android:inputType="phone"
                            tools:text="600123456" />

                    </LinearLayout>

                    <!-- DirecciÃ³n (Editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ DirecciÃ³n:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/etDireccion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            android:inputType="textPostalAddress"
                            tools:text="Calle Principal 123" />

                    </LinearLayout>

                    <!-- Rol (No editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ·ï¸ Rol:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvRolValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="bold"
                            tools:text="Voluntario" />

                    </LinearLayout>

                    <!-- ContraseÃ±a (Editable) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_campo_perfil"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”’ ContraseÃ±a:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/etContrasena"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:background="@android:color/transparent"
                            android:padding="4dp"
                            android:inputType="textPassword"
                            android:hint="Ingrese nueva contraseÃ±a" />

                        <TextView
                            android:id="@+id/btnTogglePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="ðŸ‘"
                            android:textSize="16sp"
                            android:padding="4dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- BotÃ³n de guardar (inicialmente oculto) -->
                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ’¾ Guardar Cambios"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_guardar_redondo"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:elevation="4dp"
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 