<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL (se queda fijo) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Mapa -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapaActivity" />

        <!-- Botón de menú hamburguesa -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_hamburguesa"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:iconTint="@color/quantum_black_100" />

        <!-- Botón de centrado (FAB) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_center" />

    </FrameLayout>

    <!-- MENÚ LATERAL (se desliza) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nav_background"
        android:padding="16dp">

        <!-- Contenido de tu menú (perfil, opciones, etc.) -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="76dp"
            android:contentDescription="Foto de perfil"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059" />



            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:text="Nombre de usuario"
                android:textColor="@color/quantum_black_100"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.211" />

            <TextView
                android:id="@+id/txtUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:text="usuario@email.com"
                android:textColor="@color/quantum_black_100"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.261" />

            <!-- BOTÓN HAMBURGUESA DENTRO DEL MENÚ (opcional, si quieres también dentro) -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPerfil"
                style="@style/botonMenu"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Perfil"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_profile"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@color/quantum_black_100"
                app:layout_constraintBottom_toTopOf="@+id/btnMensajes"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUserEmail"
                app:layout_constraintVertical_bias="0.586" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMensajes"
                style="@style/botonMenu"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginEnd="12dp"
                android:text="Mensajes"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_mensajes"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@color/quantum_black_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.451" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarVoluntario"
                style="@style/botonMenu"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginEnd="12dp"
                android:text="Registrar Voluntario"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_profile"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@color/quantum_black_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.562" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistrarAfectado"
                style="@style/botonMenu"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginEnd="16dp"
                android:text="Registrar Afectado"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_profile"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@color/quantum_black_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.674" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                style="@style/botonMenu"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="544dp"
                android:layout_marginEnd="16dp"
                android:text="Cerrar sesión"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_logout"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@color/quantum_black_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAjustes"
                style="@style/botonMenu"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Ajustes"
                app:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_settings"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="@color/quantum_black_100"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.767" />




        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>